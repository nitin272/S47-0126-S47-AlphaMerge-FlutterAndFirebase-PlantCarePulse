rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Plants library - read-only for all authenticated users
    match /plants/{plantId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can write (use Firebase Console)
    }
    
    // User Plants - users can only access their own plants
    match /userPlants/{userPlantId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Care activities subcollection
      match /activities/{activityId} {
        allow read: if isAuthenticated() && get(/databases/$(database)/documents/userPlants/$(userPlantId)).data.userId == request.auth.uid;
        allow write: if isAuthenticated() && get(/databases/$(database)/documents/userPlants/$(userPlantId)).data.userId == request.auth.uid;
      }
    }
  }
}
